<script>
  var prev = ""
  $('#closeMenu').click(function(){

    if (document.getElementById('menuBlock').style.width == '40%'){
      document.getElementById('menuBlock').style.width = '0%';
      document.getElementById('theFrame').style.width = 'calc(100% - 70px)';
    } else {
      document.getElementById('menuBlock').style.width = '40%';
      document.getElementById('theFrame').style.width = 'calc(60% - 70px)';
    }
  });

  $('#biglist li img').click(function(e){
   if(e.currentTarget.parentNode.children[2]){
    e.currentTarget.parentNode.children[2].style.display = e.currentTarget.parentNode.children[2].style.display != 'none' ? 'none':'block'
  } 

})
  $('#biglist a').click(function(e){
    if(e.currentTarget && e.currentTarget.title){
      prev = document.getElementById('pantalla-curso').src;
      document.getElementById('pantalla-curso').src = e.currentTarget.title+'.html'
    }

  })
  $('.lastResource').click(function(e){
   if(e.currentTarget && e.currentTarget.title){
    document.getElementById('pantalla-curso').src = prev;
  } 
})
</script>

<style>
