{
  "source": "./",
  "destination": "./doc/esdoc",
  "includes": ["^_editor", "^_visor", "^plugins", "^common", "^core",  "^reducers"],
  "plugins": [
    {
      "name": "esdoc-standard-plugin",
      "option": {
        "lint": {"enable": true},
        "brand": {
          "title": "Dali Editor",
          "description": "e-learning authoring tool",
          "repository": "https://github.com/ging/dali_editor",
          "author": "@GING"
        }
      }
    },
    {
      "name": "esdoc-publish-markdown-plugin"
    },
    {
      "name": "esdoc-react-plugin"
    },
    {
      "name": "esdoc-jsx-plugin",
      "option": {
        "enable": true
      }
    }
  ]
}